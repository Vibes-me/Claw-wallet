# Server
PORT=3000

# Coinbase CDP (optional - viem used by default)
CDP_API_KEY_NAME=your-key-name
CDP_API_KEY_PRIVATE_KEY=your-private-key

# RPC URLs (defaults provided)
BASE_SEPOLIA_RPC=https://sepolia.base.org
ETHEREUM_RPC=https://eth.llamarpc.com
POLYGON_RPC=https://polygon-rpc.com

# Fee Collection
TREASURY_ADDRESS=0x...  # Where fees go (leave empty to disable)
FEE_BASIS_POINTS=50     # 50 = 0.5% fee

# Security
API_KEY=your-api-key    # Optional API key for protected endpoints

# Transaction tracking + webhooks
TX_POLL_INTERVAL_MS=12000
WEBHOOK_SECRET=change-me
WEBHOOK_MAX_RETRIES=3
WEBHOOK_BASE_BACKOFF_MS=1000
